{
   "name": "foreman-core",
   "version": "1.0.0",
   "description": "project for foreman api",
   "author": "yrisob",
   "license": "MIT",
   "scripts": {
      "build": "tsc -p tsconfig.build.json",
      "format": "prettier --write \"src/**/*.ts\"",
      "start": "ts-node src/index.ts",
      "start:dev": "nodemon",
      "start:debug": "nodemon --config nodemon-debug.json",
      "prestart:prod": "rimraf dist && npm run build",
      "start:prod": "node dist/main.js",
      "lint": "tslint -p tsconfig.json -c tslint.json",
      "test": "jest --detectOpenHandles",
      "test:watch": "jest --watch",
      "test:cov": "jest --coverage",
      "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
      "test:e2e": "jest --config ./test/jest-e2e.json",
      "typeorm:entity": "ts-node ./node_modules/typeorm/cli.js entity:create -n",
      "typeorm:sync": "ts-node ./node_modules/typeorm/cli.js schema:sync",
      "typeorm:genmigration": "ts-node ./node_modules/typeorm/cli.js migration:generate -n"
   },
   "dependencies": {
      "@nestjs/common": "^5.4.0",
      "@nestjs/core": "^5.4.0",
      "@nestjs/passport": "^6.1.0",
      "@nestjs/typeorm": "^6.1.3",
      "jsonwebtoken": "^8.5.1",
      "mysql": "^2.14.1",
      "passport": "^0.4.0",
      "passport-jwt": "^4.0.0",
      "reflect-metadata": "^0.1.10",
      "rimraf": "^2.6.2",
      "rxjs": "^6.2.2",
      "typeorm": "^0.2.25",
      "typescript": "^3.0.1"
   },
   "devDependencies": {
      "@nestjs/testing": "^5.1.0",
      "@types/express": "^4.16.0",
      "@types/jest": "^23.3.1",
      "@types/node": "^8.0.29",
      "@types/supertest": "^2.0.5",
      "class-validator": "^0.9.1",
      "jest": "^23.5.0",
      "nodemon": "^1.18.3",
      "prettier": "^1.14.2",
      "supertest": "^3.1.0",
      "ts-jest": "^23.1.3",
      "ts-loader": "^4.4.2",
      "ts-node": "3.3.0",
      "tsconfig-paths": "^3.5.0",
      "tslint": "5.11.0",
      "typescript": "2.5.2"
   },
   "jest": {
      "moduleFileExtensions": [
         "js",
         "json",
         "ts"
      ],
      "rootDir": "src",
      "testRegex": ".spec.ts$",
      "transform": {
         "^.+\\.(t|j)s$": "ts-jest"
      },
      "coverageDirectory": "../coverage",
      "testEnvironment": "node"
   }
}
